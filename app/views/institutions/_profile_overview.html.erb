<div class="usa-width-one-whole">

	<div class="usa-width-one-half redback">
		<div id="<%= @school.facility_code %>"
			class="profile_overview"
			data-type="<%= @school.institution_type.name %>"
			data-country="<%= @school.country %>"
			data-bah="<%= @school.bah.present? ? @school.bah : 0 %>">

			<% if @school.caution_flag %>
				<div class="caution-profile">
					<%
						caution = '<i class="fa fa-exclamation-triangle"></i>'.html_safe
						caution += "Caution Flag - #{@school.caution_flag_reason.try(:chomp, ',')}"
					%>
					<a id="jump-to-complaints" href="#caution_jump_flag"><%= caution %></a>
        </div>
			<% end %>

			<h2 class="profile-head"><%= @school.institution %></h2>
			<% if @school.in_usa? %>
				<p><%= @school.city %>, <%= @school.state %></p>
			<% else %>
				<p><%= @school.city %>, <%= @school.country %></p>
			<% end %>
		</div>

		<!-- Holds student attendance and link -->
		<p>
			<%= format_number_or_null(@school.undergrad_enrollment, "Undergraduate Students") %>
		</p>

		<% if @school.insturl.present? %>
			<p><a href="http://<%= @school.insturl.downcase %>"target="_blank">
				<%= @school.insturl.downcase %>
			</a></p>
		<% end %>

		<!-- School descriptors, eg 4 yr, type, ... Add meaningful icon -->
		<div class="usa-width-one-whole">
			<% if !@school.ojt? %>
				<% hdo = @school.va_highest_degree_offered.present? ? @school.va_highest_degree_offered : 'N/A' %>
            
      	<div class="profile-institute-descriptors">
          <p class="profile-institute-qualifier">&nbsp;
          	<i class="fa fa-calendar fa-profile-descriptors"></i>&nbsp;Program
          </p>
          <p class="profile-institute-value"><%= hdo %></p>
      	</div>
      <% end %>
      
			<div class="profile-institute-descriptors"><!--HAS DATA. ADD OTHERS LIKE THIS ONE -->
         <p class="profile-institute-qualifier"><i class="fa fa-university fa-profile-descriptors"></i>&nbsp;Type</p>
          <p class="profile-institute-value"><%= @school.institution_type.display %></p>
      </div>
      
      <div class="profile-institute-descriptors"><!--NEEDS DATA  -->
         <p class="profile-institute-qualifier"><i class="fa fa-map fa-profile-descriptors"></i>&nbsp;Locale</p>
          <p class="profile-institute-value"><%= to_locale(@school.locale) %></p>
      </div>
               
		</div>
	</div>

	<% if !@school.ojt? %>
		<!-- Veteran Summary -->
		<div class="usa-width-one-fourth nested usa-card usa-card-fill">
		  <div class="usa-card-header"><h4>Veteran Summary</h4></div>
		  <div class="usa-card-content va-summary-card">
	      <p>
	      	<span class="search-value-each"><%= @school.gibill %></span> <a id="go" rel="leanModal" name="status" href="#gibillstudents"><span class="programs-text">GI Bill Students</span></a>
	      </p>
				<ul>
					<% v_str = '<span class="programs-' + (@school.student_veteran ? "yes\">\u2714" : "no\">\u2716") + '</span>' %>
	        <li>
	        	<%= v_str.html_safe %> <a id="go" rel="leanModal" name="status" href="#vetgroups"><span class="programs-text">Student Veteran Group</span></a>
	        </li>
	                
	        <% v_str = '<span class="programs-' + (@school.yr ? "yes\">\u2714" : "no\">\u2716") + '</span>' %>
	        <li>
	        	<%= v_str.html_safe %><a id="go" rel="leanModal" name="status" href="#yribbon"><span class="programs-text">Yellow Ribbon Scholarships</span></a>
	        </li>
	                
	        <% v_str = '<span class="programs-' + (@school.poe ? "yes\">\u2714" : "no\">\u2716") + '</span>' %>
	        <li>
	        	<%= v_str.html_safe %><a id="go" rel="leanModal" name="status" href="#poe"> <span class="programs-text">Principles of Excellence</span></a>
	        </li>
	                
	        <% v_str = '<span class="programs-' + (@school.dodmou ? "yes\">\u2714" : "no\">\u2716") + '</span>' %>
	        <li>
	        	<%= v_str.html_safe %> <a id="go" rel="leanModal" name="status" href="#ta"><span class="programs-text">Military Tuition Assistance (TA)</span></a>
	        </li>

	        <% v_str = '<span class="programs-' + (@school.eight_keys ? "yes\">\u2714" : "no\">\u2716") + '</span>' %>
	        <li>
	        	<%= v_str.html_safe %> <a id="go" rel="leanModal" name="status" href="#8keys"><span class="programs-text">8 Keys to Veteran Success</span></a>
	        </li>        
				</ul>
		  </div>
		</div>
	<% end %>
<div class="usa-width-one-fourth usa-card usa-card-fill">
  <div class="usa-card-header">
		<h4>Additional Resources</h4>
  </div>
  <div class="usa-card-content">	
  	<%= render partial: 'profile_additional_resources' %>
  </div>
</div>

</div>

