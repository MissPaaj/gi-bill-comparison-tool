<div id="<%= school_summary[:facility_code] %>"  
	class="school_summary"

	data-id="<%= school_summary[:id] %>" 
	data-facility-code="<%= school_summary[:facility_code] %>"
	data-institution="<%= school_summary[:institution] %>"
	data-city="<%= school_summary[:city] %>"
	data-state="<%= school_summary[:state] %>" 
	data-country="<%= school_summary[:country] %>" 
	data-type="<%= school_summary[:name].try(:downcase) %>"
	data-school="<%= school_summary[:name].try(:downcase) != Institution::EMPLOYER %>"
	data-employer="<%= school_summary[:name].try(:downcase) == Institution::EMPLOYER %>"
	data-poe="<%= school_summary[:poe] %>"
	data-student-veteran="<%= school_summary[:student_veteran] %>"
	data-eight-keys="<%= school_summary[:eight_keys] %>"
	data-yr="<%= school_summary[:yr] %>"
>
	<h4><%= school_summary[:institution] %></h4>

	<% if school_summary[:country].downcase == 'usa' %>
		<small>
			<%= "#{school_summary[:city]}, #{school_summary[:state]} #{school_summary[:zip]}" %>
		</small>
	<% else %>
		<p><%= "#{school_summary[:city]}, #{school_summary[:country]}" %></p>
	<% end %>

	<div>
		<ul>
			<li><%= school_summary[:poe] ? "\u2714" : "\u2716" %> Principles of Excellence</li>
			<li><%= school_summary[:student_veteran] ? "\u2714" : "\u2716" %> Student Veteran Group</li>
			<li><%= school_summary[:eight_keys] ? "\u2714" : "\u2716" %> 8 Keys to Veteran Success</li>
			<li><%= school_summary[:yr] ? "\u2714" : "\u2716" %> Yellow Ribbon Scholarships</li>
		</ul>
	</div>

	<div>
		<a id="a-<%= school_summary[:id] %>" href="#">Learn More</a>
	</div>
</div>

<script>
	$(document).ready(function() {
		$("#a-<%= school_summary[:id] %>").click(function() {
			href = "<%= profile_path %>?facility_code=<%= school_summary[:facility_code] %>";
			href += "&military-status=" + $("#military-status").val();
			href += "&spouse_active_duty=" + $("#spouse-active-duty").val();
			href += "&gi_bill_chapter=" + $("#gi-bill-chapter").val();
			href += "&cumulative_service=" + $("#cumulative-service").val();
			href += "&enlistment_service=" + $("#enlistment-service").val();
			href += "&consecutive_service=" + $("#consecutive-service").val();
			href += "&elig_for_post_gi_bill=" + $("#elig-for-post-gi-bill").val();
			href += "&number_of_dependents=" + $("#number-of-dependents").val();
			href += "&online_classes=" + $("#online-classes").val();
			href += "&institution_search" + $("#institution_search").val();

			$(this).attr("href", href);
		});
	});
</script>
